<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_component_search"
    android:layout_marginBottom="14dp"
    >

    <TextView
        android:id="@+id/tv_bus_name"
        style="@style/TextViewBlue"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="@string/sempati_star"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_plat"
        style="@style/TextViewSecondaryBlack.Regular"
        android:layout_marginStart="14dp"
        android:text="P 1923 NM"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_bus_name"
        app:layout_constraintStart_toEndOf="@id/tv_bus_name"
        app:layout_constraintTop_toTopOf="@id/tv_bus_name" />

    <TextView
        android:id="@+id/tv_start_time"
        style="@style/TextViewPrimaryBlack"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="17:00"
        app:layout_constraintStart_toStartOf="@+id/tv_bus_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bus_name" />

    <TextView
        android:id="@+id/tv_name_terminal"
        style="@style/TextViewSecondaryBlack.Regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="@string/terminal_amplas"
        app:layout_constraintBottom_toBottomOf="@+id/tv_start_time"
        app:layout_constraintStart_toEndOf="@id/tv_start_time"
        app:layout_constraintTop_toTopOf="@+id/tv_start_time" />

    <TextView
        android:id="@+id/tv_terminal_location"
        style="@style/TextViewSecondaryBlack.Regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medan"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_terminal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_name_terminal"
        app:layout_constraintTop_toBottomOf="@id/tv_name_terminal" />

    <TextView
        android:id="@+id/tv_end_time"
        style="@style/TextViewPrimaryBlack"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="17:00"
        app:layout_constraintStart_toStartOf="@+id/tv_start_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_terminal_location" />

    <TextView
        android:id="@+id/tv_name_terminal_end"
        style="@style/TextViewSecondaryBlack.Regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terminal_amplas"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_end_time"
        app:layout_constraintStart_toEndOf="@+id/tv_end_time"
        app:layout_constraintTop_toTopOf="@+id/tv_end_time" />

    <TextView
        android:id="@+id/tv_terminal_location_end"
        style="@style/TextViewSecondaryBlack.Regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medan"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_terminal_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_terminal_end"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_terminal_end" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@color/text_grey_third"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_terminal_location_end" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_plat"
        app:layout_constraintTop_toTopOf="@+id/tv_plat">

        <ImageView
            android:id="@+id/img_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rating"
            style="@style/TextViewPrimaryYellow"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="9dp"
            android:text="4.9/5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_rating" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_reviewers"
        style="@style/TextViewSecondaryGrey"
        android:textSize="12sp"
        android:gravity="end"
        android:text="120\nReviewers"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_plat"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextViewBlue"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Rp166.000,00"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_per_seat"
        style="@style/TextViewPrimaryBlack.Regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="/seat"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_book_now"
        android:background="@drawable/bg_button"
        app:layout_constraintBottom_toBottomOf="@+id/tv_per_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_price"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        android:text="@string/book_now"
        style="@style/ButtonPrimary.BluePrimaryWrapContent"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:layout_marginEnd="24dp"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_row_left"
        android:layout_marginTop="33dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>